# Auto detect text files and perform LF normalization
* text=auto

# Rust source files
*.rs text eol=lf

# Configuration files
*.toml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# Documentation
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows scripts
*.ps1 text eol=crlf
*.bat text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
